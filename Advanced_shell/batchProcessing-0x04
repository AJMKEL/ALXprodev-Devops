#!/bin/bash

# Directory to store Pokémon data
OUTPUT_DIR="pokemon_data"
# Error log file
ERROR_FILE="errors.txt"

# Create directory if it doesn't exist
mkdir -p "$OUTPUT_DIR"

# List of Pokémon to fetch
POKEMONS=("bulbasaur" "ivysaur" "venusaur" "charmander" "charmeleon")

# Array to hold background process PIDs
PIDS=()

# Function to fetch a single Pokémon with retry logic
fetch_pokemon() {
    local pokemon=$1
    local retries=0
    local success=0

    echo "Fetching data for $pokemon..."

    while [ $retries -lt 3 ]; do
        RESPONSE=$(curl -s -w "%{http_code}" -o "$OUTPUT_DIR/$pokemon.json" "https://pokeapi.co/api/v2/pokemon/$pokemon")
        STATUS=${RESPONSE: -3}

        if [ "$STATUS" -eq 200 ]; then
            echo "Saved data to $OUTPUT_DIR/$pokemon.json ✅"
            success=1
            break
        else
            retries=$((retries + 1))
            echo "Attempt $retries failed for $pokemon (status: $STATUS). Retrying..."
            sleep 1
        fi
    done

    if [ $success -eq 0 ]; then
        echo "$(date '+%Y-%m-%d %H:%M:%S') - Failed to fetch $pokemon after 3 attempts (status: $STATUS)" >> "$ERROR_FILE"
        echo "Failed to fetch $pokemon ❌. Logged to $ERROR_FILE"
    fi
}

# Loop through each Pokémon and start fetching in the background
for pokemon in "${POKEMONS[@]}"; do
    fetch_pokemon "$pokemon" &
    PIDS+=($!)  # Store PID of background process
done

# Wait for all background processes to complete
for pid in "${PIDS[@]}"; do
    wait $pid || echo "Process $pid failed or was killed."
done

echo "All Pokémon data fetching completed."
