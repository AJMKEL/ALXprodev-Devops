#!/bin/bash

# File paths
DATA_FILE="data.json"
ERROR_FILE="errors.txt"

# PokÃ©mon API URL for Pikachu
POKEMON_API="https://pokeapi.co/api/v2/pokemon/pikachu"

# Make the API request using curl
HTTP_RESPONSE=$(curl -s -w "%{http_code}" -o "$DATA_FILE" "$POKEMON_API")

# Extract HTTP status code
HTTP_STATUS=${HTTP_RESPONSE: -3}

# Check if the request was successful (HTTP 200)
if [ "$HTTP_STATUS" -eq 200 ]; then
    echo "API request successful. Data saved to $DATA_FILE"
else
    echo "$(date '+%Y-%m-%d %H:%M:%S') - API request failed with status $HTTP_STATUS" >> "$ERROR_FILE"
    echo "Error logged to $ERROR_FILE"
fi
